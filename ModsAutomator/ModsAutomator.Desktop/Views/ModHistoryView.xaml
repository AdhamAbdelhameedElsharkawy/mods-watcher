<UserControl x:Class="ModsAutomator.Desktop.Views.ModHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">
    <DockPanel Margin="30">
        <Button DockPanel.Dock="Top" Command="{Binding BackCommand}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Back to Library" Foreground="#2196F3" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,30">
            <TextBlock Text="INSTALLATION HISTORY" FontSize="11" Foreground="#444" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedMod.Name}" FontSize="28" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <ListBox ItemsSource="{Binding HistoryLogs}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1E1E1E" Margin="0,0,0,10" Padding="15" CornerRadius="8" BorderThickness="1,0,0,0" BorderBrush="#2196F3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DateInstalled, StringFormat='MMM dd, yyyy'}" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding DateInstalled, StringFormat='HH:mm'}" Foreground="#555" FontSize="11"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding Version}" Foreground="#2196F3" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0">
                                <TextBlock Text="{Binding ActionType}" Foreground="#888" FontWeight="Bold" FontSize="10"/>
                                <TextBlock Text="{Binding LogMessage}" Foreground="#AAA" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Grid.Column="3" Content="Rollback to this" Command="{Binding RollbackCommand}"
                                    Padding="15,8" Background="#333" Foreground="White" BorderThickness="0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>