<UserControl x:Class="ModsAutomator.Desktop.Views.RetiredModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Command="{Binding BackCommand}" 
                Background="Transparent" BorderThickness="0" 
                HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE112;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Back to Active Library" Foreground="#2196F3" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <TextBlock Grid.Row="1" Text="RETIRED MOD ARCHIVE" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

        <Grid Grid.Row="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasNoRetiredMods, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#222" HorizontalAlignment="Center"/>
                <TextBlock Text="The Graveyard is Empty" FontSize="18" Foreground="#444" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="Hard-wiped mods will appear here for future restoration." FontSize="13" Foreground="#333" HorizontalAlignment="Center"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RetiredMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1E1E1E" Margin="0,0,0,10" Padding="20" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Version, StringFormat='Last Version: {0}'}" Foreground="#666" FontSize="12"/>
                                            <TextBlock Text=" | " Foreground="#444" Margin="5,0"/>
                                            <TextBlock Text="{Binding AppVersion, StringFormat='App: {0}'}" Foreground="#666" FontSize="12"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding RootSourceUrl}" Foreground="#2196F3" FontSize="11" Margin="0,8,0,0" Opacity="0.7"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="Restore to Library" 
                                            Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="20,10" Background="#3F51B5" Foreground="White" BorderThickness="0" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>