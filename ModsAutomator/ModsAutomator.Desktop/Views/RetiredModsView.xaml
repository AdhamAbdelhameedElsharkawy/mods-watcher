<UserControl x:Class="ModsAutomator.Desktop.Views.RetiredModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">
    <DockPanel Margin="30">
        <Button DockPanel.Dock="Top" Command="{Binding BackCommand}" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Back to Active Library" Foreground="#2196F3" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <TextBlock DockPanel.Dock="Top" Text="RETIRED MOD ARCHIVE" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

        <ListBox ItemsSource="{Binding RetiredMods}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1E1E1E" Margin="0,0,0,10" Padding="20" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="{Binding LastKnownVersion, StringFormat='Last used version: {0}'}" Foreground="#666" FontSize="12"/>
                                <TextBlock Text="{Binding RootSourceUrl}" Foreground="#2196F3" FontSize="11" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="Restore to Library" Command="{Binding RestoreCommand}"
                                    Padding="20,10" Background="#3F51B5" Foreground="White" BorderThickness="0" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>