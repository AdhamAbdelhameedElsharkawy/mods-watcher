<Window x:Class="ModsWatcher.Desktop.Views.ModInstallationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installation Details" Height="450" Width="400"
        Background="#1E1E1E" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" BorderBrush="#333" BorderThickness="1">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="EDIT INSTALLATION" Foreground="#2196F3" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Installed Version" Foreground="#888" FontSize="11"/>
            <TextBox Text="{Binding InstalledVersion}" Margin="0,5,0,15" Background="#252525" Foreground="White" BorderBrush="#444" Padding="5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,5,0">
                    <TextBlock Text="Size (MB)" Foreground="#888" FontSize="11"/>
                    <TextBox Text="{Binding Entity.InstalledSizeMB}" Margin="0,5,0,15" Background="#252525" Foreground="White" BorderBrush="#444" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="File Count" Foreground="#888" FontSize="11"/>
                    <TextBox Text="{Binding Entity.PackageFilesNumber}" Margin="0,5,0,15" Background="#252525" Foreground="White" BorderBrush="#444" Padding="5"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Package Type" Foreground="#888" FontSize="11"/>
            <ComboBox ItemsSource="{Binding PackageTypes}" 
                      SelectedItem="{Binding Entity.PackageType}" 
                      Margin="0,5,0,15" 
                      Padding="5"
                      Background="#252525" 
                      Foreground="White" 
                      BorderBrush="#444">
                <ComboBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#252525" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="White" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3F51B5" />
                </ComboBox.Resources>
            </ComboBox>

            <TextBlock Text="Download Source URL" Foreground="#888" FontSize="11"/>
            <Grid Margin="0,5,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding DownloadUrl}" Background="#252525" Foreground="White" BorderBrush="#444" Padding="5"/>
                <Button Grid.Column="1" 
                        Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        CommandParameter="{Binding Entity.DownloadUrl}"
                        Background="Transparent" BorderThickness="0" Margin="5,0,0,0">
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="14" VerticalAlignment="Center"/>
                </Button>
            </Grid>

            <TextBlock Text="Supported App Versions" Foreground="#888" FontSize="11"/>
            <TextBox Text="{Binding SupportedAppVersions}" Margin="0,5,0,0" Background="#252525" Foreground="White" BorderBrush="#444" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Margin="0,0,10,0" Background="Transparent" Foreground="#888" BorderThickness="0"/>
            <Button Content="Save Data" Command="{Binding SaveCommand}" Width="100" Background="#2196F3" Foreground="White" BorderThickness="0" Height="30"/>
        </StackPanel>
    </Grid>
</Window>