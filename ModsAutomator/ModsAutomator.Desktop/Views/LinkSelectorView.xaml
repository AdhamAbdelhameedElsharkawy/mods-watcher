<Window x:Class="ModsAutomator.Desktop.Views.LinkSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mod Pages" Height="500" Width="450"
        Background="#121212" Foreground="White"
        WindowStartupLocation="CenterOwner" x:Name="DialogWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="CRAWLER STAGE 1" FontSize="11" Foreground="#444" FontWeight="Bold"/>
            <TextBlock Text="Select target links for deep parsing" FontSize="16" Foreground="White"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="5" Padding="5">
            <ListBox ItemsSource="{Binding Links}" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalContentAlignment="Center">
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock Text="{Binding DisplayText}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Url}" Foreground="#2196F3" FontSize="10"/>
                                </StackPanel>
                            </CheckBox>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                        CommandParameter="{Binding Url}"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Copy URL" Margin="0,0,5,0">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#666" FontSize="14"/>
                                </Button>

                                <Button Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                        CommandParameter="{Binding Url}"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Open in Browser">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#666" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" IsCancel="True" Width="80" Margin="0,0,10,0" 
                    Background="Transparent" Foreground="#666" BorderThickness="0"/>

            <Button Content="Confirm Selection" 
                    Command="{Binding ConfirmCommand}" 
                    CommandParameter="{Binding ElementName=DialogWindow}"
                    Background="#4CAF50" Foreground="White" 
                    Padding="20,8" BorderThickness="0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>