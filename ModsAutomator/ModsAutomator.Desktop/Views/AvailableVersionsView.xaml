<UserControl x:Class="ModsAutomator.Desktop.Views.AvailableVersionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Background="#1A1A1A">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="InstalledRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="1,0,1,1"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                    <Setter Property="Background" Value="#161B33"/>
                    <Setter Property="BorderBrush" Value="#3F51B5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="VERSION HISTORY &amp; PROMOTION" FontSize="11" FontWeight="Bold" Foreground="#666" />
            <TextBlock Text="Available Versions" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GroupedAvailableMods}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,30">
                            <Border Background="#252525" CornerRadius="8,8,0,0" Padding="15" BorderBrush="#333" BorderThickness="1,1,1,0">
                                <DockPanel>
                                    <TextBlock Text="{Binding ModName}" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                    <Button DockPanel.Dock="Right" Content="DELETE SELECTED" 
                                            Command="{Binding DataContext.DeleteSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#C62828" Foreground="White" FontSize="10" FontWeight="Bold" Padding="10,4" HorizontalAlignment="Right"/>
                                </DockPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding Versions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InstalledRowStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Entity.AvailableVersion}" FontSize="16" FontWeight="Bold" Foreground="White"/>

                                                        <Border Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}" 
                                                                Background="#3F51B5" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="INSTALLED" FontSize="9" FontWeight="Black" Foreground="White"/>
                                                        </Border>

                                                        <Border Visibility="{Binding IsCompatible, Converter={StaticResource BoolToVis}}" 
                                                                Background="#4CAF50" CornerRadius="4" Padding="6,2" Margin="5,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="COMPATIBLE" FontSize="9" FontWeight="Black" Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                                        <TextBlock Text="{Binding Entity.ReleaseDate, StringFormat='Released: {0:d}'}" Foreground="#666" FontSize="11"/>
                                                        <TextBlock Text=" | " Foreground="#333" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Entity.SizeMB, StringFormat='{}{0:N1} MB'}" Foreground="#666" FontSize="11"/>
                                                        <TextBlock Text=" | " Foreground="#333" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Entity.PackageType}" Foreground="#555" FontSize="11" FontStyle="Italic"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Content="PROMOTE" 
        Command="{Binding DataContext.PromoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding}"
        IsEnabled="{Binding IsCompatible}" 
        Padding="15,6" 
        Background="#3F51B5" 
        Foreground="White" 
        FontWeight="Bold" 
        Margin="0,0,10,0"/>

                                                    <Button Content="" FontFamily="Segoe MDL2 Assets"
                                                            Command="{Binding DataContext.DeleteSingleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" Foreground="#666" BorderThickness="0" FontSize="14"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#333" Padding="0,15,0,0">
            <Button Content="Back to Library" 
                    Command="{Binding BackCommand}" 
                    Background="Transparent" Foreground="#888" BorderThickness="0" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>