<UserControl x:Class="ModsAutomator.Desktop.Views.AvailableVersionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:ModsAutomator.Desktop.Services"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="800"
             Background="#1A1A1A">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:InverseBoolToVisConverter x:Key="InverseBoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="VERSIONS MANAGER" FontSize="11" FontWeight="Bold" Foreground="#666" />
                <TextBlock Text="{Binding ViewTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
            </StackPanel>

            <Button DockPanel.ZIndex="1" HorizontalAlignment="Right"
                    Command="{Binding CrawlAllCommand}"
                    Padding="20,10" Background="#2196F3" Foreground="White" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="CRAWL ALL MODS" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </DockPanel>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasNoMods, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="64" Foreground="#333" HorizontalAlignment="Center"/>
                <TextBlock Text="No mods found for this view." FontSize="18" Foreground="#555" Margin="0,10,0,0"/>
                <TextBlock Text="Try adding a mod or check your application settings." FontSize="12" Foreground="#444" HorizontalAlignment="Center"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Visibility="{Binding HasNoMods, Converter={StaticResource InverseBoolToVis}}">
                <ItemsControl ItemsSource="{Binding GroupedMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,30">
                                <Border Background="#252525" CornerRadius="8,8,0,0" Padding="15" BorderThickness="1,1,1,0" BorderBrush="#333">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ModName}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="{Binding RootSourceUrl}" FontSize="11" Foreground="#2196F3"/>
                                        </StackPanel>
                                        <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                                                Command="{Binding DataContext.CrawlSingleModCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding ModId}"
                                                Background="#333" Foreground="White" Padding="12,5" BorderThickness="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="12"/>
                                                <TextBlock Text="Sync This Mod" FontSize="12"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>

                                <ItemsControl ItemsSource="{Binding AvailableVersions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1E1E1E" Padding="15" BorderThickness="1,0,1,1" BorderBrush="#333">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding AvailableVersion}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                                            <Border Visibility="{Binding IsCompatibleWithCurrentGame, Converter={StaticResource BoolToVis}}" 
                                    Background="#4CAF50" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                                                <TextBlock Text="COMPATIBLE" FontSize="9" FontWeight="Black" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>

                                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                                            <TextBlock Text="{Binding ReleaseDate, StringFormat='Released: {0:d}'}" Foreground="#666" FontSize="11"/>
                                                            <TextBlock Text=" | " Foreground="#333" Margin="5,0"/>
                                                            <TextBlock Text="Verified: " Foreground="#444" FontSize="11"/>
                                                            <TextBlock Text="{Binding LastCrawled, StringFormat='{}{0:g}'}" Foreground="#888" FontSize="11"/>
                                                        </StackPanel>

                                                        <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Padding="0" Cursor="Hand"
                                Command="{Binding DataContext.OpenDownloadLinkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding DownloadUrl}">
                                                            <TextBlock Text="Get Download Link" Foreground="#2196F3" TextDecorations="Underline" FontSize="12"/>
                                                        </Button>
                                                    </StackPanel>

                                                    <Button Grid.Column="1" Content="INSTALL" 
                            Command="{Binding DataContext.PromoteToInstalledCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Padding="20,8" Background="#3F51B5" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#333" Padding="0,15,0,0">
            <DockPanel>
                <Button Content="Back to Library" Command="{Binding BackCommand}" Background="Transparent" Foreground="#888" BorderThickness="0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Last Batch Sync: " Foreground="#444" FontSize="11" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding LastCrawlDate}" Foreground="#666" FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>
        <Grid Grid.RowSpan="4" Background="#AA000000" 
      Visibility="{Binding IsReviewOverlayVisible, Converter={StaticResource BoolToVis}}">

            <Border Background="#252525" CornerRadius="12" Width="600" Height="500" 
            BorderBrush="#444" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="CRAWL SYNC REVIEW" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Review online changes before updating your local database." FontSize="12" Foreground="#888"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReviewViewModel.ReviewItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Padding="12" CornerRadius="6" Background="#1E1E1E" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChangeType}" Value="New">
                                                        <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ChangeType}" Value="Modified">
                                                        <Setter Property="BorderBrush" Value="#F57F17"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ChangeType}" Value="Stale">
                                                        <Setter Property="BorderBrush" Value="#C62828"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ModEntry.AvailableVersion}" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock Text="{Binding ChangeDescription}" FontSize="11" Foreground="#888"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" Padding="8,2" CornerRadius="4" VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ChangeType}" Value="New">
                                                                <Setter Property="Background" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ChangeType}" Value="Modified">
                                                                <Setter Property="Background" Value="#F57F17"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ChangeType}" Value="Stale">
                                                                <Setter Property="Background" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangeType}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <UniformGrid Grid.Row="2" Columns="2" Margin="0,15,0,0">
                        <Button Content="CANCEL" Command="{Binding ReviewViewModel.CancelCommand}" 
                        Background="Transparent" Foreground="#888" BorderThickness="0" Margin="0,0,10,0"/>
                        <Button Content="RESOLVE ALL" Command="{Binding ReviewViewModel.ResolveAllCommand}" 
                        Background="#2196F3" Foreground="White" FontWeight="Bold" Padding="15,10" BorderThickness="0"/>
                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>