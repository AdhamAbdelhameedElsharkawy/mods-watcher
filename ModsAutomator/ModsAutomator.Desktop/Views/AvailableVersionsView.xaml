<UserControl x:Class="ModsAutomator.Desktop.Views.AvailableVersionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="700"
             Background="#1E1E1E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="CRAWLER RESULTS" FontSize="11" FontWeight="Bold" Foreground="#666" />
            <TextBlock Text="{Binding SelectedMod.Name}" FontSize="26" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="{Binding SelectedMod.RootSourceUrl}" Foreground="#2196F3" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#252525" Padding="15" CornerRadius="8" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#333">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="CURRENTLY INSTALLED" Foreground="#888" FontSize="11"/>
                    <TextBlock Text="{Binding CurrentInstalledVersionDisplay}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="" FontFamily="Segoe MDL2 Assets" Foreground="#444" 
                           VerticalAlignment="Center" FontSize="20" Margin="20,0"/>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right" TextBlock.TextAlignment="Right">
                    <TextBlock Text="TARGET GAME VERSION" Foreground="#888" FontSize="11"/>
                    <TextBlock Text="{Binding TargetAppVersion}" Foreground="#2196F3" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <ListBox Grid.Row="2" ItemsSource="{Binding AvailableMods}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,12" Padding="18" CornerRadius="8" BorderThickness="1.5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="BorderBrush" Value="#333"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCompatibleWithCurrentGame}" Value="True">
                                        <Setter Property="Background" Value="#1A2E1A"/>
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Version}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <Border Visibility="{Binding IsCompatibleWithCurrentGame, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                            Background="#4CAF50" CornerRadius="4" Padding="8,2" Margin="12,0,0,0">
                                        <TextBlock Text="COMPATIBLE" FontSize="10" FontWeight="Black" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding SupportedAppVersionsDisplay, StringFormat='Supported Game Versions: {0}'}" 
                                           Foreground="#888" FontSize="12" Margin="0,6,0,10"/>

                                <Button HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding DataContext.OpenDownloadLinkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding DownloadUrl}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Open Download Page" Foreground="#2196F3" TextDecorations="Underline" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Button Content="Promote to Installed" 
                                        Padding="15,10" Background="#3F51B5" Foreground="White" BorderThickness="0" FontWeight="SemiBold"
                                        Command="{Binding DataContext.PromoteToInstalledCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <TextBlock Text="Updates your local mod info" Foreground="#555" FontSize="10" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DockPanel Grid.Row="3" Margin="0,20,0,0">
            <Button Content="Close Browser" Background="Transparent" Foreground="#666" BorderThickness="0" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock Text="Crawler Data Freshness: " Foreground="#444" FontSize="11"/>
                <TextBlock Text="{Binding LastCrawlDate}" Foreground="#888" FontSize="11" Margin="5,0,0,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>