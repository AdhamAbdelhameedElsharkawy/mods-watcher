<Window x:Class="ModsAutomator.Desktop.Views.VersionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Versions to Track" Height="500" Width="850" 
        WindowStartupLocation="CenterOwner" Background="#2D2D2D" Foreground="White">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Multiple versions found." FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="Select which versions to save to history, and pick ONE to set as the active version." 
                       FontSize="12" Foreground="#AAAAAA" TextWrapping="Wrap"/>
        </StackPanel>

        <DataGrid x:Name="ModGrid" 
                  ItemsSource="{Binding DisplayMods}"
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Background="#1E1E1E" 
                  RowBackground="#1E1E1E" 
                  Foreground="White"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#333333">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Save" 
                                        Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="50"/>

                <DataGridTemplateColumn Header="Install" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <RadioButton IsChecked="{Binding IsPrimary, UpdateSourceTrigger=PropertyChanged}" 
                                         GroupName="PrimaryVersion" 
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Version" 
                                    Binding="{Binding Mod.AvailableVersion}" 
                                    Width="120" IsReadOnly="True"/>

                <DataGridTextColumn Header="Size" 
                                    Binding="{Binding Mod.SizeMB, StringFormat={}{0} MB}" 
                                    Width="80" IsReadOnly="True"/>

                <DataGridTextColumn Header="Date" 
                                    Binding="{Binding Mod.ReleaseDate}" 
                                    Width="100" IsReadOnly="True"/>

                <DataGridTextColumn Header="Source URL" 
                                    Binding="{Binding Mod.CrawledModUrl}" 
                                    Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Process Selection" 
                    Command="{Binding AcceptCommand}"
                    Width="140" Height="32" Margin="0,0,10,0" 
                    Background="#007ACC" Foreground="White" BorderThickness="0"
                    IsDefault="True"/>

            <Button Content="Cancel" 
                    Width="100" Height="32" 
                    IsCancel="True" Background="Transparent" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>