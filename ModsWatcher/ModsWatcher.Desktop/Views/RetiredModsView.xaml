<UserControl x:Class="ModsWatcher.Desktop.Views.RetiredModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ARCHIVE &amp; RESTORATION" FontSize="11" FontWeight="Bold" Foreground="#888" />
            <TextBlock Text="Retired Mod Archive" FontSize="24" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasNoRetiredMods, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="64" Foreground="#252525" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="The Graveyard is Empty" FontSize="20" FontWeight="Bold" Foreground="#444" HorizontalAlignment="Center"/>
                <TextBlock Text="Hard-wiped mods will appear here for future restoration." Foreground="#333" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RetiredMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1E1E1E" Margin="0,0,0,10" Padding="15" CornerRadius="8" BorderBrush="#333" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <DockPanel>
                                            <Border Visibility="{Binding WatcherXPath, Converter={StaticResource BoolToVis}}" 
                                                    Background="#4A148C" CornerRadius="4" Padding="6,2" Margin="0,0,10,0" VerticalAlignment="Center">
                                                <TextBlock Text="CRAWLABLE" Foreground="#E1BEE7" FontSize="9" FontWeight="Black"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        </DockPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding AppName}" Foreground="#3F51B5" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text=" v" Foreground="#666" FontSize="12"/>
                                            <TextBlock Text="{Binding AppVersion}" Foreground="#666" FontSize="12"/>

                                            <TextBlock Text=" | " Foreground="#444" Margin="5,0"/>
                                            <TextBlock Text="&#xE77B; " FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Author}" Foreground="#AAA" FontSize="12" FontStyle="Italic"/>

                                            <TextBlock Text=" | Removed: " Foreground="#444" Margin="5,0"/>
                                            <TextBlock Text="{Binding RemovedAt, StringFormat=d}" Foreground="#666" FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,12,0,0" Visibility="{Binding WatcherXPath, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="RETAINED CRAWLER CONFIG" FontSize="9" Foreground="#555" FontWeight="Black" Margin="0,0,0,6"/>
                                            <UniformGrid Columns="2">
                                                <StackPanel Margin="0,0,10,0">
                                                    <TextBlock Text="Watcher XPath" Foreground="#444" FontSize="10" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding WatcherXPath}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <TextBlock Text="Mod Name Regex" Foreground="#444" FontSize="10" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding ModNameRegex}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </UniformGrid>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Reason}" Foreground="#FFC107" FontSize="11" Margin="0,10,0,0" 
                                                   FontStyle="Italic" Visibility="{Binding Reason, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="RESTORE SHELL" 
                                            Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="15,6" Background="#3F51B5" Foreground="White" FontWeight="Bold" 
                                            BorderThickness="0" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#333" Padding="0,15,0,0">
            <Button Command="{Binding BackCommand}" Background="Transparent" Foreground="#888" BorderThickness="0" HorizontalAlignment="Left" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Back to Library" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</UserControl>