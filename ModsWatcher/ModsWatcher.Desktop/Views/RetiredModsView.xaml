<UserControl x:Class="ModsWatcher.Desktop.Views.RetiredModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ModsWatcher.Desktop.Services"
             Background="{DynamicResource WindowBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ARCHIVE &amp; RESTORATION" Style="{DynamicResource InspectorSectionHeaderStyle}" />
            <TextBlock Text="Retired Mod Archive" Style="{DynamicResource ModTitleTextStyle}" FontSize="24"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasNoRetiredMods, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="64" Foreground="{DynamicResource BorderMuted}" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="The Graveyard is Empty" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextMuted}" HorizontalAlignment="Center"/>
                <TextBlock Text="Hard-wiped mods will appear here for future restoration." Foreground="{DynamicResource TextMuted}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RetiredMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource HistoryRowStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                            <Border Visibility="{Binding WatcherXPath, Converter={StaticResource StringToVisibilityConverter}}" 
                                                    Background="{DynamicResource AccentPrimary}" CornerRadius="4" Padding="6,2" Margin="0,0,10,0" VerticalAlignment="Center">
                                                <TextBlock Text="CRAWLABLE" Foreground="White" FontSize="9" FontWeight="Black"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" Foreground="{DynamicResource TextPrimary}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding AppName}" Foreground="{DynamicResource AccentPrimary}" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text=" v" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                                            <TextBlock Text="{Binding AppVersion}" Foreground="{DynamicResource TextMuted}" FontSize="12"/>
                                            <TextBlock Text=" | " Foreground="{DynamicResource BorderMuted}" Margin="5,0"/>
                                            <TextBlock Text="&#xE77B; " FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="10" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Author}" Foreground="{DynamicResource TextSecondary}" FontSize="12" FontStyle="Italic"/>
                                            <TextBlock Text=" | Removed: " Foreground="{DynamicResource BorderMuted}" Margin="5,0"/>
                                            <TextBlock Text="{Binding RemovedAt, StringFormat=d}" Foreground="{DynamicResource TextMuted}" FontSize="12"/>

                                            <Border Visibility="{Binding Reason, Converter={StaticResource StringToVisibilityConverter}}"
                                                    Background="{DynamicResource CardInnerSectionBackground}" CornerRadius="4" Padding="8,2" Margin="12,0,0,0" VerticalAlignment="Center"
                                                    BorderBrush="{DynamicResource AccentWarning}" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="REASON: " Foreground="{DynamicResource AccentWarning}" FontSize="10" FontWeight="Black" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Reason}" Foreground="{DynamicResource TextPrimary}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Visibility="{Binding WatcherXPath, Converter={StaticResource StringToVisibilityConverter}}">
                                            <Grid Margin="0,15,0,8">
                                                <Separator Background="{DynamicResource BorderMuted}" VerticalAlignment="Center"/>
                                                <TextBlock Text="RETAINED WATCHER CONFIG" FontSize="9" Foreground="{DynamicResource TextMuted}" 
                                                           FontWeight="Black" Background="{DynamicResource CardBackground}" HorizontalAlignment="Left" Padding="0,0,10,0"/>
                                            </Grid>

                                            <UniformGrid Columns="2">
                                                <StackPanel Margin="0,0,10,0">
                                                    <TextBlock Text="Watcher XPath" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding WatcherXPath}" Foreground="{DynamicResource TextSecondary}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <TextBlock Text="Mod Name Regex" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding ModNameRegex}" Foreground="{DynamicResource TextSecondary}" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </UniformGrid>

                                            <Grid Margin="0,15,0,8">
                                                <Separator Background="{DynamicResource BorderMuted}" VerticalAlignment="Center"/>
                                                <TextBlock Text="RETAINED CRAWLER CONFIG" FontSize="9" Foreground="{DynamicResource TextMuted}" 
                                                           FontWeight="Black" Background="{DynamicResource CardBackground}" HorizontalAlignment="Left" Padding="0,0,10,0"/>
                                            </Grid>

                                            <UniformGrid Columns="3">
                                                <StackPanel Margin="0,0,10,10">
                                                    <TextBlock Text="Version XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VersionXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,10,10">
                                                    <TextBlock Text="Release Date XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding ReleaseDateXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,0,10">
                                                    <TextBlock Text="Size XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding SizeXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <StackPanel Margin="0,0,10,0">
                                                    <TextBlock Text="Download URL XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding DownloadUrlXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel Margin="0,0,10,0">
                                                    <TextBlock Text="Supported App XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding SupportedAppVersionsXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <TextBlock Text="File Count XPath" Foreground="{DynamicResource TextMuted}" FontSize="9" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding PackageFilesNumberXPath, TargetNullValue='N/A'}" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </UniformGrid>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="RESTORE SHELL" 
                                            Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{DynamicResource PrimaryActionButtonStyle}"
                                            Padding="15,6" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderMuted}" Padding="0,15,0,0">
            <Button Command="{Binding BackCommand}" Style="{DynamicResource GhostActionButtonStyle}" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Back to Library" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Border>
    </Grid>
</UserControl>