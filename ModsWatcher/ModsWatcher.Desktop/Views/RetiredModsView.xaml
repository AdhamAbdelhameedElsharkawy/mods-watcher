<UserControl x:Class="ModsWatcher.Desktop.Views.RetiredModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Command="{Binding BackCommand}" 
                Background="Transparent" BorderThickness="0" 
                HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE112;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Back to Active Library" Foreground="#2196F3" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <TextBlock Grid.Row="1" Text="RETIRED MOD ARCHIVE" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

        <Grid Grid.Row="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasNoRetiredMods, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#222" HorizontalAlignment="Center"/>
                <TextBlock Text="The Graveyard is Empty" FontSize="18" Foreground="#444" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="Hard-wiped mods will appear here for future restoration." FontSize="13" Foreground="#333" HorizontalAlignment="Center"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RetiredMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1E1E1E" Margin="0,0,0,10" Padding="20" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <DockPanel>
                                            <Border Visibility="{Binding WatcherXPath, Converter={StaticResource BoolToVis}}" 
                            Background="#4A148C" CornerRadius="4" Padding="5,2" Margin="0,0,10,0" VerticalAlignment="Center">
                                                <TextBlock Text="CRAWLABLE" Foreground="#E1BEE7" FontSize="9" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                        </DockPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding AppName}" Foreground="#2196F3" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text=" v" Foreground="#666" FontSize="12"/>
                                            <TextBlock Text="{Binding AppVersion}" Foreground="#666" FontSize="12"/>

                                            <TextBlock Text=" | " Foreground="#444" Margin="5,0"/>
                                            <TextBlock Text="&#xE77B; " FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Author}" Foreground="#AAA" FontSize="12" FontStyle="Italic"/>

                                            <TextBlock Text=" | Removed: " Foreground="#444" Margin="5,0"/>
                                            <TextBlock Text="{Binding RemovedAt, StringFormat=d}" Foreground="#666" FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Margin="0,12,0,0" Visibility="{Binding WatcherXPath, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="RETAINED CRAWLER CONFIG" FontSize="10" Foreground="#444" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <UniformGrid Columns="2">
                                                <StackPanel Margin="0,0,10,0">
                                                    <TextBlock Text="Watcher XPath" Foreground="#555" FontSize="10"/>
                                                    <TextBlock Text="{Binding WatcherXPath}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                                <StackPanel>
                                                    <TextBlock Text="Mod Name Regex" Foreground="#555" FontSize="10"/>
                                                    <TextBlock Text="{Binding ModNameRegex}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </UniformGrid>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Reason}" Foreground="#FFA500" FontSize="11" Margin="0,10,0,0" 
                           FontStyle="Italic" Visibility="{Binding Reason, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="Restore Shell" 
                    Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Padding="20,10" Background="#3F51B5" Foreground="White" BorderThickness="0" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>