<UserControl x:Class="ModsWatcher.Desktop.Views.AvailableVersionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Background="{DynamicResource WindowBackground}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="VERSION HISTORY &amp; PROMOTION" Style="{DynamicResource InspectorSectionHeaderStyle}" />
            <TextBlock Text="Available Versions" Style="{DynamicResource ModTitleTextStyle}" FontSize="24"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GroupedAvailableMods}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,30">
                            <Border Style="{DynamicResource VersionGroupHeaderStyle}">
                                <DockPanel>
                                    <TextBlock Text="{Binding ModName}" Style="{DynamicResource ModTitleTextStyle}" FontSize="18" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Margin="20,0">
                                        <TextBlock Text="FILTER:" Style="{DynamicResource SmallHeaderTextStyle}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <ComboBox ItemsSource="{Binding AppVersionFilterOptions}" 
                      SelectedItem="{Binding SelectedAppVersionFilter}"
                      Width="100" Height="22" VerticalContentAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                    <CheckBox Content="OVERRIDE COMPATIBILITY" IsChecked="{Binding IsOverrideEnabled}" 
                                              Foreground="{DynamicResource TextSecondary}" FontSize="10" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
                                    <Button DockPanel.Dock="Right" Content="DELETE SELECTED" Style="{DynamicResource DeleteButtonStyle}"
                                            Command="{Binding DataContext.DeleteSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" HorizontalAlignment="Right"/>
                                </DockPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding DisplayedVersions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{DynamicResource InstalledRowStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Entity.AvailableVersion}" Style="{DynamicResource ModTitleTextStyle}" FontSize="16"/>
                                                        <Border Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}" 
                                                                Style="{DynamicResource StatusBadgeStyle}" Background="{DynamicResource AccentPrimary}" Margin="10,0,0,0">
                                                            <TextBlock Text="INSTALLED" FontSize="9" FontWeight="Black" Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <WrapPanel Margin="0,4">
                                                        <TextBlock Text="{Binding Entity.SizeMB, StringFormat='{}{0:N1} MB'}" Style="{DynamicResource ModMetadataTextStyle}"/>
                                                        <TextBlock Text=" | " Foreground="{DynamicResource BorderMuted}" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Entity.PackageFilesNumber, StringFormat='{}{0} Files'}" Style="{DynamicResource ModMetadataTextStyle}"/>
                                                        <TextBlock Text=" | " Foreground="{DynamicResource BorderMuted}" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Entity.PackageType}" Style="{DynamicResource ModMetadataTextStyle}" FontStyle="Italic"/>
                                                        <TextBlock Text=" | " Foreground="{DynamicResource BorderMuted}" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Entity.SupportedAppVersions, StringFormat='Supports: {0}'}" Foreground="{DynamicResource AccentPrimary}" FontSize="11"/>
                                                    </WrapPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding Entity.ReleaseDate, StringFormat='{}{0:d}'}" Style="{DynamicResource ModMetadataTextStyle}" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                                        <TextBlock Text="SOURCE:" Style="{DynamicResource SmallHeaderTextStyle}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <Button Style="{DynamicResource ActionIconButtonStyle}" Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Entity.CrawledModUrl}">
                                                            <TextBlock Text="&#xE12B;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource AccentPrimary}" FontSize="13"/>
                                                        </Button>
                                                        <Button Style="{DynamicResource ActionIconButtonStyle}" Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Entity.CrawledModUrl}">
                                                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="13"/>
                                                        </Button>

                                                        <TextBlock Text=" | " Foreground="{DynamicResource BorderMuted}" VerticalAlignment="Center" Margin="10,0"/>

                                                        <TextBlock Text="PACKAGE:" Style="{DynamicResource SmallHeaderTextStyle}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <Button Style="{DynamicResource ActionIconButtonStyle}" Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Entity.DownloadUrl}">
                                                            <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource AccentSuccess}" FontSize="13"/>
                                                        </Button>
                                                        <Button Style="{DynamicResource ActionIconButtonStyle}" Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Entity.DownloadUrl}">
                                                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="13"/>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Content="PROMOTE" 
                                                            Command="{Binding DataContext.PromoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{DynamicResource PrimaryActionButtonStyle}" Margin="0,0,10,0">
                                                        <Button.Resources>
                                                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryActionButtonStyle}">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsCompatible}" Value="True">
                                                                        <Setter Property="IsEnabled" Value="True"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding DataContext.IsOverrideEnabled, RelativeSource={RelativeSource AncestorType=ContentPresenter, AncestorLevel=2}}" Value="True">
                                                                        <Setter Property="IsEnabled" Value="True"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>

                                                    <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                            Command="{Binding DataContext.DeleteSingleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{DynamicResource ActionIconButtonStyle}" Foreground="{DynamicResource AccentDanger}" FontSize="14" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderMuted}" Padding="0,15,0,0">
            <Button Content="Back to Library" Command="{Binding BackCommand}" Style="{DynamicResource GhostActionButtonStyle}" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>