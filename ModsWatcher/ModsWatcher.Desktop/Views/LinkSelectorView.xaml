<Window x:Class="ModsWatcher.Desktop.Views.LinkSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mod Pages" Height="500" Width="450"
        Background="{DynamicResource WindowBackground}" Foreground="{DynamicResource TextPrimary}"
        WindowStartupLocation="CenterOwner" x:Name="DialogWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="CRAWLER STAGE 1" Style="{DynamicResource InspectorSectionHeaderStyle}"/>
            <TextBlock Text="Select target links for deep parsing" Style="{DynamicResource ModTitleTextStyle}"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{DynamicResource CardBackground}" 
                BorderBrush="{DynamicResource BorderMuted}" BorderThickness="1" CornerRadius="8" Padding="5">
            <ListBox ItemsSource="{Binding Links}" Background="Transparent" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalContentAlignment="Center">
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock Text="{Binding DisplayText}" Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Url}" Foreground="{DynamicResource AccentPrimary}" FontSize="10"/>
                                </StackPanel>
                            </CheckBox>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                        CommandParameter="{Binding Url}"
                                        Style="{DynamicResource ActionIconButtonStyle}" ToolTip="Copy URL" Margin="0,0,5,0">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="14"/>
                                </Button>

                                <Button Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                        CommandParameter="{Binding Url}"
                                        Style="{DynamicResource ActionIconButtonStyle}" ToolTip="Open in Browser">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextMuted}" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" IsCancel="True" Style="{DynamicResource GhostActionButtonStyle}" Width="80" Margin="0,0,10,0"/>

            <Button Content="Confirm Selection" 
                    Command="{Binding ConfirmCommand}" 
                    CommandParameter="{Binding ElementName=DialogWindow}"
                    Style="{DynamicResource PrimaryActionButtonStyle}"
                    Background="{DynamicResource AccentSuccess}"
                    Padding="20,0"/>
        </StackPanel>
    </Grid>
</Window>