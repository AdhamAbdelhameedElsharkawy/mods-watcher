<UserControl x:Class="ModsWatcher.Desktop.Views.ModHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ModsWatcher.Desktop.Services"
             Background="#121212">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:InverseBoolToVisConverter x:Key="InverseBoolToVis" />
    </UserControl.Resources>

    <DockPanel Margin="30">
        <Button DockPanel.Dock="Top" 
                Command="{Binding BackCommand}" 
                Background="Transparent" 
                BorderThickness="0" 
                HorizontalAlignment="Left" 
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE897;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="Back to Library" Foreground="#2196F3" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Grid DockPanel.Dock="Top" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="INSTALLATION HISTORY" FontSize="11" Foreground="#444" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedModName}" FontSize="28" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
                <CheckBox IsChecked="{Binding OverrideRollbackRules}" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <TextBlock Text="Override Rollback Rules" Foreground="#666" VerticalAlignment="Center">
                    <TextBlock.ToolTip>
                        <ToolTip Content="Allow rollback to versions designed for different App versions."/>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid>
            <ListBox ItemsSource="{Binding HistoryItems}" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     HorizontalContentAlignment="Stretch"
                     Visibility="{Binding HasHistory, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ItemBorder" Background="#1E1E1E" Margin="0,0,0,10" Padding="15" CornerRadius="8" BorderThickness="2,0,0,0" BorderBrush="#2196F3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding History.InstalledAt, StringFormat='MMM dd, yyyy'}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Date Installed" Foreground="#555" FontSize="11"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding History.Version}" Foreground="#2196F3" FontSize="16" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="App: " Foreground="#444" FontSize="10"/>
                                        <TextBlock Text="{Binding History.AppVersion}" Foreground="#888" FontSize="10" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0">
                                    <Border x:Name="CompBadge" HorizontalAlignment="Left" Padding="8,2" CornerRadius="4" Background="#121212">
                                        <TextBlock x:Name="CompText" Text="COMPATIBLE" FontSize="9" FontWeight="Bold" Foreground="#4CAF50"/>
                                    </Border>
                                </StackPanel>

                                <Button Grid.Column="3" 
                                        Content="Rollback to this" 
                                        Command="{Binding DataContext.RollbackCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding CanRollback}" 
                                        Padding="20,10" 
                                        Background="#333" 
                                        Foreground="White" 
                                        BorderThickness="0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.2"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#444"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsCompatible}" Value="False">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#444"/>
                                <Setter TargetName="CompText" Property="Text" Value="VERSION MISMATCH"/>
                                <Setter TargetName="CompText" Property="Foreground" Value="#F44336"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasHistory, Converter={StaticResource InverseBoolToVis}}">
                <TextBlock Text="&#xE7BA;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="64" 
                           Foreground="#252525" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                <TextBlock Text="No History Found" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#444" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="This mod hasn't been updated since it was first installed." 
                           Foreground="#333" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>