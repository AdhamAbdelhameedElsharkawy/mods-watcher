<Window x:Class="ModsWatcher.Desktop.Views.ModInstallationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installation Details" Height="450" Width="400"
        Background="{DynamicResource CardBackground}" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" BorderBrush="{DynamicResource BorderMuted}" BorderThickness="1">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="EDIT INSTALLATION" Style="{DynamicResource DialogHeaderStyle}"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Installed Version" Style="{DynamicResource InputLabelStyle}"/>
            <TextBox Text="{Binding InstalledVersion, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Margin="0,0,0,15"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,0,5,0">
                    <TextBlock Text="Size (MB)" Style="{DynamicResource InputLabelStyle}"/>
                    <TextBox Text="{Binding Entity.InstalledSizeMB}" Margin="0,0,0,15"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="File Count" Style="{DynamicResource InputLabelStyle}"/>
                    <TextBox Text="{Binding Entity.PackageFilesNumber}" Margin="0,0,0,15"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Package Type" Style="{DynamicResource InputLabelStyle}"/>
            <ComboBox ItemsSource="{Binding PackageTypes}" 
                      SelectedItem="{Binding Entity.PackageType}" 
                      Margin="0,0,0,15"/>

            <TextBlock Text="Download Source URL" Style="{DynamicResource InputLabelStyle}"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding DownloadUrl, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                <Button Grid.Column="1" 
                        Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                        CommandParameter="{Binding Entity.DownloadUrl}"
                        Style="{DynamicResource ActionIconButtonStyle}" Margin="5,0,0,0">
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource AccentPrimary}" FontSize="14"/>
                </Button>
            </Grid>

            <TextBlock Text="Supported App Versions" Style="{DynamicResource InputLabelStyle}"/>
            <TextBox Text="{Binding SupportedAppVersions, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{DynamicResource ActionIconButtonStyle}" Width="80" Margin="0,0,10,0" Foreground="{DynamicResource TextMuted}"/>
            <Button Content="Save Data" Command="{Binding SaveCommand}" Width="100" Background="{DynamicResource AccentPrimary}" Foreground="{DynamicResource TextPrimary}" Height="30"/>
        </StackPanel>
    </Grid>
</Window>