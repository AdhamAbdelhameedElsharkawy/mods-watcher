<Window x:Class="ModsWatcher.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ModsWatcher.Desktop.ViewModels"
        xmlns:views="clr-namespace:ModsWatcher.Desktop.Views"
        mc:Ignorable="d"
        Title="Mods Watcher 2026" Height="600" Width="1000"
        Background="#1E1E1E">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate DataType="{x:Type viewmodels:AppSelectionViewModel}">
            <views:AppSelectionView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LibraryViewModel}">
            <views:LibraryView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:AvailableVersionsViewModel}">
            <views:AvailableVersionsView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ModHistoryViewModel}">
            <views:ModHistoryView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:RetiredModsViewModel}">
            <views:RetiredModsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
        <Border Visibility="{Binding Loading.IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="#AA121212">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="250" 
                             Height="2" 
                             Foreground="#4CAF50" 
                             Background="#333" 
                             BorderThickness="0"/>

                <TextBlock Text="{Binding Loading.BusyMessage}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,0" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="System is processing data..." 
                           Foreground="#666" 
                           FontSize="11" 
                           Margin="0,5,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>