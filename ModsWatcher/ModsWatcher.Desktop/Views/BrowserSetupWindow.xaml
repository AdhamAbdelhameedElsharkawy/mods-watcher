<Window x:Class="ModsWatcher.Desktop.Views.BrowserSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting up Components" 
        Height="200" Width="450" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{DynamicResource CardBackground}" 
            CornerRadius="12" 
            BorderBrush="{DynamicResource BorderMuted}" 
            BorderThickness="1">
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="Initial Setup" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource TextPrimary}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Downloading Chromium browser engine..." 
                       Foreground="{DynamicResource TextSecondary}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>

            <ProgressBar Style="{DynamicResource LoadingProgressBarStyle}" />

            <TextBlock Text="This usually takes 1-2 minutes depending on your internet." 
                       FontSize="11" 
                       Foreground="{DynamicResource TextMuted}" 
                       Margin="0,15,0,0" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>