<Window x:Class="ModsWatcher.Desktop.Views.BrowserSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setting up Components" 
        Height="200" Width="450" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#1E1E1E" CornerRadius="12" BorderBrush="#333" BorderThickness="1">
        <StackPanel VerticalAlignment="Center" Margin="30">
            <TextBlock Text="Initial Setup" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Downloading Chromium browser engine..." Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <ProgressBar IsIndeterminate="True" Height="10" Background="#252525" Foreground="#3F51B5" BorderThickness="0">
                <ProgressBar.Template>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}">
                            <Border x:Name="PART_Indicator" CornerRadius="5" Background="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </ProgressBar.Template>
            </ProgressBar>

            <TextBlock Text="This usually takes 1-2 minutes depending on your internet." 
                       FontSize="11" Foreground="#555" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>