<UserControl x:Class="ModsWatcher.Desktop.Views.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ModsWatcher.Desktop.Services"
             Background="#121212">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
        <conv:InverseBoolToVisConverter x:Key="InverseBoolToVisConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="380" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="20">
            <Border DockPanel.Dock="Top" Background="#1E1E1E" Padding="15" CornerRadius="10" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MaxWidth="400" />
                        <ColumnDefinition Width="*" MinWidth="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Command="{Binding NavToAppsCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,12,0" Cursor="Hand">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White"/>
                        </Button>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedApp.Name}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding SelectedApp.InstalledVersion, StringFormat='Target Version: {0}'}" 
                                       Foreground="#2196F3" 
                                       FontSize="10"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="+ Register Mod" Command="{Binding AddModShellCommand}" 
                                Background="#2196F3" Foreground="White" Padding="12,5" Height="32" Margin="0,0,6,0" BorderThickness="0"/>

                        <Button Command="{Binding SyncAllModsCommand}" Background="#252525" Foreground="#4CAF50" Padding="10,5" Height="32" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Sync All" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavToVersionsManagerCommand}" Background="#252525" Foreground="#FFC107" Padding="10,5" Height="32" Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7A6;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Versions" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavToRetiredCommand}" Background="Transparent" Foreground="#666" BorderThickness="0" Margin="0" ToolTip="Retired History">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Retired" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border DockPanel.Dock="Top" 
            Background="#1E1E1E" 
            CornerRadius="8" 
            Margin="0,0,0,15" 
            Padding="12,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="&#xE721;" 
                       FontFamily="Segoe MDL2 Assets" 
                       Foreground="#666" 
                       VerticalAlignment="Center" 
                       FontSize="14"
                       Margin="5,0,12,0"/>

                    <TextBox x:Name="ModSearchBox" 
                     Grid.Column="1"
                     Tag="Search mods..." 
                     TextChanged="ModSearchBox_TextChanged"
                     Background="Transparent" 
                     Foreground="White" 
                     BorderThickness="0" 
                     Padding="0,10"
                     VerticalContentAlignment="Center"
                     CaretBrush="#2196F3"/>
                </Grid>
            </Border>

            <ListBox 
                x:Name="ModListBox"
                ItemsSource="{Binding Mods}" 
         SelectedItem="{Binding SelectedMod}" 
         Background="Transparent" 
         BorderThickness="0"
         HorizontalContentAlignment="Stretch"
                     ScrollViewer.CanContentScroll="False"
         
         VirtualizingStackPanel.ScrollUnit="Pixel"
         VirtualizingStackPanel.VirtualizationMode="Recycling"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         xmlns:dd="urn:gong-wpf-dragdrop"
         dd:DragDrop.IsDragSource="True"
         dd:DragDrop.IsDropTarget="True"
         dd:DragDrop.DropHandler="{Binding}">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="OuterBorder" 
                                Padding="2" 
                                Background="Transparent" 
                                BorderThickness="3,0,0,0" 
                                BorderBrush="Transparent"
                                Margin="0,0,0,10">

                                        <ContentPresenter />
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="OuterBorder" Property="Background" Value="#252525"/>
                                        </Trigger>

                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#2196F3"/>
                                            <Setter TargetName="OuterBorder" Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                                    <Button Command="{Binding DataContext.MoveUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}" 
            Background="Transparent" 
            BorderThickness="0" 
            Cursor="Hand"
            Foreground="#888" 
            Content="&#xE74A;" 
            FontSize="16"
            FontFamily="Segoe MDL2 Assets"
            ToolTip="Move Up">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <TextBlock Text="&#xE76F;" 
               FontFamily="Segoe MDL2 Assets" 
               FontSize="14" 
               Foreground="#444" 
               HorizontalAlignment="Center"
               Margin="0,2"
               Cursor="SizeAll"
               ToolTip="Drag to reorder"/>

                                    <Button Command="{Binding DataContext.MoveDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}" 
            Background="Transparent" 
            BorderThickness="0" 
            Cursor="Hand"
            Foreground="#888" 
            Content="&#xE74B;" 
            FontSize="16"
            FontFamily="Segoe MDL2 Assets"
            ToolTip="Move Down">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <TextBlock Text="{Binding PriorityOrder}" 
               Foreground="#555" 
               FontSize="11" 
               FontWeight="Bold"
               HorizontalAlignment="Center" 
               Margin="0,5"/>
                                </StackPanel>
                                <Grid Grid.Column="1" Margin="5,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                   

                                    <TextBlock Grid.Row="0" Text="{Binding Name}" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Author, StringFormat='by {0}'}" Foreground="#555" FontSize="11" Margin="0,2,0,8"/>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                                        <Border Background="{Binding Installed, Converter={StaticResource NullToColorConverter}, ConverterParameter='#2E4A2E|#4A2E2E'}" 
                                                CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                            <TextBlock Text="{Binding Installed, Converter={StaticResource NullToStringConverter}, ConverterParameter='INSTALLED|PENDING SETUP'}" 
                                                       Foreground="White" FontSize="9" FontWeight="Bold"/>
                                        </Border>

                                        <Border Visibility="{Binding IsUsed, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                Background="#2E4A2E" CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                            <TextBlock Text="ACTIVE" Foreground="#4CAF50" FontSize="9" FontWeight="Bold"/>
                                        </Border>

                                        <Border Visibility="{Binding IsCompatible, Converter={StaticResource InverseBoolToVisConverter}}" 
                                                Background="#B71C1C" CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                            <TextBlock Text="MISMATCH" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                        </Border>

                                        <Border Visibility="{Binding HasUpdate, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                Background="#FFC107" CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                            <TextBlock Text="POSSIBLE UPDATE" Foreground="Black" FontSize="9" FontWeight="Bold"/>
                                        </Border>

                                        <Border Visibility="{Binding WatcherError, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                Background="#F44336" CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                            <TextBlock Text="WATCHER ERROR" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock Grid.Row="3" 
               Text="{Binding ModDescription}" 
               Foreground="#777" 
               FontSize="11" 
               TextWrapping="Wrap" 
               Margin="0,0,0,10"/>

                                    <StackPanel Grid.Row="4" 
                Visibility="{Binding Shell.RootSourceUrl, Converter={StaticResource NullToBoolConverter}}" 
                Margin="0,0,0,10">
                                        <TextBlock Text="ROOT SOURCE" Foreground="#444" FontSize="9" FontWeight="Bold" Margin="0,0,0,4"/>
                                        <DockPanel Background="#181818" LastChildFill="True">
                                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                                <Button Style="{StaticResource ActionIconButtonStyle}" 
                        Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Shell.RootSourceUrl}">
                                                    <TextBlock Text="&#xE128;" FontFamily="Segoe MDL2 Assets" Foreground="#2196F3" FontSize="12" Margin="5,0"/>
                                                </Button>
                                                <Button Style="{StaticResource ActionIconButtonStyle}" 
                        Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Shell.RootSourceUrl}">
                                                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="12" Margin="5,0"/>
                                                </Button>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Shell.RootSourceUrl}" 
                       Foreground="#888" 
                       FontSize="10" 
                       VerticalAlignment="Center" 
                       Margin="8,4"
                       TextTrimming="CharacterEllipsis"/>
                                        </DockPanel>
                                    </StackPanel>

                                    <Button Grid.Row="6" 
            Content="Check Versions" 
            HorizontalAlignment="Right" 
            Command="{Binding DataContext.NavToSingleModVersionsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}" 
            Background="#252525" 
            Foreground="#FFC107" 
            FontSize="11" 
            Padding="12,4" 
            BorderThickness="0"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                      Background="Transparent" ShowsPreview="True" Margin="2,0"/>

        <Border Grid.Column="2" Background="#181818" BorderBrush="#252525" BorderThickness="1,0,0,0" Padding="25">
            <Grid>
                <Grid x:Name="DetailView" Visibility="{Binding SelectedMod, Converter={StaticResource NullToBoolConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="MOD INSPECTOR" FontSize="11" Foreground="#444" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding SelectedMod.Shell.Name}" FontSize="24" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>

                            <Button Command="{Binding FullSyncSingleModCommand}" CommandParameter="{Binding SelectedMod}" Margin="0,15,0,0" Padding="10" Background="#1E2A1E" BorderBrush="#4CAF50" BorderThickness="0,0,0,2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Run Full Sync" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Border Visibility="{Binding SelectedMod.Installed, Converter={StaticResource NullToBoolConverter}}" 
                                    Background="#161B33" CornerRadius="8" Padding="15" Margin="0,20,0,0" BorderBrush="#3F51B5" BorderThickness="1">
                                <StackPanel>
                                    <DockPanel LastChildFill="False" Margin="0,0,0,10">
                                        <TextBlock Text="CURRENTLY INSTALLED" Foreground="#3F51B5" FontSize="10" FontWeight="Black" VerticalAlignment="Center"/>
                                        <Button DockPanel.Dock="Right"
                                                Command="{Binding ShowHistoryCommand}"
                                                CommandParameter="{Binding SelectedMod}"
                                                Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="5,0,0,0">
                                            <TextBlock Text="&#xE81C;" FontFamily="Segoe MDL2 Assets" Foreground="#3F51B5" FontSize="14" ToolTip="View Installation History"/>
                                        </Button>
                                        <TextBlock DockPanel.Dock="Right" Text="{Binding SelectedMod.Installed.InstalledVersion}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </DockPanel>

                                    <Separator Background="#252525" Margin="0,0,0,10"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="INSTALL DATE" Foreground="#888" FontSize="9" Margin="0,0,0,2"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding SelectedMod.Installed.InstalledDate, StringFormat='{}{0:d}'}" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="COMPATIBILITY" Foreground="#888" FontSize="9" Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding SelectedMod.Installed.SupportedAppVersions}" Foreground="#2196F3" FontSize="11" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="DOWNLOAD SOURCE" Foreground="#888" FontSize="9" Margin="0,5,0,2"/>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button Style="{StaticResource ActionIconButtonStyle}" 
                                                    Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding SelectedMod.Installed.DownloadUrl}">
                                                <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" FontSize="14"/>
                                            </Button>

                                            <Button Style="{StaticResource ActionIconButtonStyle}" 
                                                    Command="{Binding DataContext.CopyUrlCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding SelectedMod.Installed.DownloadUrl}">
                                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="14"/>
                                            </Button>
                                        </StackPanel>
                                        <TextBlock Text="{Binding SelectedMod.Installed.DownloadUrl}" 
                                                   Foreground="#666" FontSize="10" VerticalAlignment="Center" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,0,10,0"/>
                                    </DockPanel>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="INSTALLATION" FontSize="11" Foreground="#444" Margin="0,25,0,10"/>
                            <Button Content="Edit Installation Data" Command="{Binding EditInstallationCommand}" Visibility="{Binding SelectedMod.Installed, Converter={StaticResource NullToBoolConverter}}" Background="#2A2A2A" Foreground="#4CAF50" Height="35" BorderThickness="0" Margin="0,0,0,5"/>
                            <Button Content="Setup Manual Install" Command="{Binding SetupManualInstallCommand}" Visibility="{Binding SelectedMod.Installed, Converter={StaticResource NullToBoolConverter}, ConverterParameter=Inverted}" Background="#2A2A2A" Foreground="#2196F3" Height="35" BorderThickness="0"/>

                            <TextBlock Text="CONFIGURATION" FontSize="11" Foreground="#444" Margin="0,25,0,10"/>
                            <Button Content="Edit Shell Metadata" Command="{Binding EditModShellCommand}" Background="#2A2A2A" Foreground="White" Height="35" BorderThickness="0"/>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel Grid.Row="1" Margin="0,15,0,0">
                        <Button Content="DEACTIVATE MOD" Command="{Binding ToggleActivationCommand}" Visibility="{Binding SelectedMod.IsUsed, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#333" Foreground="#BBB" Height="40" Margin="0,0,0,10" BorderThickness="0"/>
                        <Button Content="ACTIVATE MOD" Command="{Binding ToggleActivationCommand}" Visibility="{Binding SelectedMod.IsUsed, Converter={StaticResource InverseBoolToVisConverter}}" Background="#4CAF50" Foreground="White" Height="40" Margin="0,0,0,10" BorderThickness="0"/>
                        <Button Content="HARD WIPE" Command="{Binding HardWipeCommand}" Background="Transparent" BorderBrush="#442222" BorderThickness="1" Height="40" Foreground="#F44336"/>
                    </StackPanel>
                </Grid>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Visibility="{Binding SelectedMod, Converter={StaticResource NullToBoolConverter}, ConverterParameter=Inverted}">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#222" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a mod to inspect" Foreground="#444" Margin="0,10" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>