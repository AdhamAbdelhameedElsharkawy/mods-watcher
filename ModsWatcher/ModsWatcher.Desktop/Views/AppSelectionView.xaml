<UserControl x:Class="ModsWatcher.Desktop.Views.AppSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Game Library" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Manage app versions and mod compatibility" Foreground="#666" FontSize="14"/>
            </StackPanel>

            <Button Content="+ Register New App" 
                    Command="{Binding AddAppCommand}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Padding="20,10" Background="#3F51B5" Foreground="White" BorderThickness="0"/>
        </DockPanel>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding ModdedApps.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="#333" HorizontalAlignment="Center"/>
            <TextBlock Text="No apps registered yet" FontSize="18" Foreground="#666" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <TextBlock Text="Click '+ Register New App' to begin" FontSize="14" Foreground="#444" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ModdedApps}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="310" Margin="0,0,20,20" Background="#1E1E1E" CornerRadius="12">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="" FontFamily="Segoe MDL2 Assets" Command="{Binding DataContext.EditAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="Transparent" Foreground="#555" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button Content="" FontFamily="Segoe MDL2 Assets" Command="{Binding DataContext.DeleteAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Background="Transparent" Foreground="#442222" BorderThickness="0"/>
                                    </StackPanel>
                                </DockPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Installed" Foreground="#888" FontSize="10"/>
                                            <TextBlock Text="{Binding InstalledVersion}" Foreground="#2196F3" FontSize="13" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Latest" Foreground="#888" FontSize="10" TextAlignment="Right"/>
                                            <TextBlock Text="{Binding LatestVersion}" Foreground="#FFC107" FontSize="13" FontWeight="Bold" TextAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <Border Grid.Row="2" Padding="15" Background="#252525" CornerRadius="8" Margin="0,0,0,20">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding ActiveModsCount}" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text=" Active Mods" Foreground="#888" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <Separator Background="#333" Margin="0,5,0,10"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" 
                       Foreground="{Binding PotentialUpdatesCount, Converter={StaticResource CountToColorConverter}}" 
                       Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding PotentialUpdatesCount}" 
                       Foreground="White" FontWeight="Bold"/>
                                            <TextBlock Text=" Potential Updates" Foreground="#888" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Content="Manage &amp; Fix" 
            Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            CommandParameter="{Binding}" Padding="10,8" Background="#333" Foreground="White" BorderThickness="0"/>

                                    <Button Grid.Column="1" 
        ToolTip="Sync &amp; Check for Updates (Hash Comparison)"
        FontFamily="Segoe MDL2 Assets" 
        Content="" 
        Command="{Binding DataContext.SyncAppModsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
        CommandParameter="{Binding}" 
        Width="40" Margin="8,0,0,0" 
        Background="#252525" 
        BorderBrush="#444">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Foreground" Value="#FFC107"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="#555"/>
                                                        <Setter Property="Content" Value=""/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <StackPanel Grid.Row="4" Margin="0,15,0,0">
                                    <Separator Background="#252525" Margin="0,0,0,5"/>
                                    <DockPanel>
                                        <TextBlock Text="Last Updated:" Foreground="#444" FontSize="10" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding LastUpdatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                               Foreground="#666" FontSize="10" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>