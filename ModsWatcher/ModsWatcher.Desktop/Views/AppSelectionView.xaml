<UserControl x:Class="ModsWatcher.Desktop.Views.AppSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource WindowBackground}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Game Library" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                <TextBlock Text="Manage app versions and mod compatibility" Foreground="{DynamicResource TextMuted}" FontSize="14"/>
            </StackPanel>

            <Button Content="+ Register New App" 
                    Command="{Binding AddAppCommand}"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Padding="20,10" Background="{DynamicResource AccentPrimary}" Foreground="{DynamicResource TextPrimary}" BorderThickness="0"/>
        </DockPanel>

        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding ModdedApps.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="60" Foreground="{DynamicResource TextDisabled}" HorizontalAlignment="Center"/>
            <TextBlock Text="No apps registered yet" FontSize="18" Foreground="{DynamicResource TextMuted}" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <TextBlock Text="Click '+ Register New App' to begin" FontSize="14" Foreground="{DynamicResource TextDisabled}" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ModdedApps}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource AppCardBorder}">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="" Style="{DynamicResource ActionIconButtonStyle}" FontFamily="Segoe MDL2 Assets" Command="{Binding DataContext.EditAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Foreground="{DynamicResource TextMuted}"/>
                                        <Button Content="" Style="{DynamicResource ActionIconButtonStyle}" FontFamily="Segoe MDL2 Assets" Command="{Binding DataContext.DeleteAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Foreground="{DynamicResource AccentDanger}"/>
                                    </StackPanel>
                                </DockPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Installed" Foreground="{DynamicResource TextSecondary}" FontSize="10"/>
                                            <TextBlock Text="{Binding InstalledVersion}" Foreground="{DynamicResource AccentPrimary}" FontSize="13" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Latest" Foreground="{DynamicResource TextSecondary}" FontSize="10" TextAlignment="Right"/>
                                            <TextBlock Text="{Binding LatestVersion}" Foreground="{DynamicResource AccentWarning}" FontSize="13" FontWeight="Bold" TextAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <Border Grid.Row="2" Padding="15" Background="{DynamicResource CardInnerSectionBackground}" CornerRadius="8" Margin="0,0,0,20">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,10">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource AccentSuccess}" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding ActiveModsCount}" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold"/>
                                                <TextBlock Text=" Active Mods" Foreground="{DynamicResource TextSecondary}" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <Separator Background="{DynamicResource TextDisabled}" Margin="0,5,0,10" Opacity="0.2"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" 
                                                       Foreground="{Binding PotentialUpdatesCount, Converter={StaticResource CountToColorConverter}}" 
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding PotentialUpdatesCount}" Foreground="{DynamicResource TextPrimary}" FontWeight="Bold"/>
                                            <TextBlock Text=" Potential Updates" Foreground="{DynamicResource TextSecondary}" Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Content="Manage &amp; Fix" 
                                            Command="{Binding DataContext.SelectAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Padding="10,8" Foreground="{DynamicResource TextPrimary}"/>

                                    <Button Grid.Column="1" 
                                            ToolTip="Sync &amp; Check for Updates (Hash Comparison)"
                                            FontFamily="Segoe MDL2 Assets" 
                                            Content="" 
                                            Command="{Binding DataContext.SyncAppModsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" 
                                            Width="40" Margin="8,0,0,0"
                                            Background="{DynamicResource CardInnerSectionBackground}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Foreground" Value="{DynamicResource AccentWarning}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource TextDisabled}"/>
                                                        <Setter Property="Content" Value=""/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <StackPanel Grid.Row="4" Margin="0,15,0,0">
                                    <Separator Background="{DynamicResource CardInnerSectionBackground}" Margin="0,0,0,5"/>
                                    <DockPanel>
                                        <TextBlock Text="Last Updated:" Foreground="{DynamicResource TextDisabled}" FontSize="10" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding LastUpdatedDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                                   Foreground="{DynamicResource TextMuted}" FontSize="10" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>